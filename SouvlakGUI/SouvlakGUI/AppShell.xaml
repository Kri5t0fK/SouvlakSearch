<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SouvlakGUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SouvlakGUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Graph selection"
            ContentTemplate="{DataTemplate views:GraphSelectPage}"
            />
        <ShellContent
            Title="Algorithm options"
            ContentTemplate="{DataTemplate views:AlgorithmOptionsPage}"
            />
        <ShellContent
            Title="Result"
            ContentTemplate="{DataTemplate views:ResultPage}"
            />

    </TabBar>

</Shell>
