<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SouvlakGUI.Views.GraphEditorPage"
             Title="">

    <Grid RowDefinitions="65, *" Margin="0" >
        <Grid ColumnDefinitions="130, 165, *, 65, 100, 130" ColumnSpacing="5" BackgroundColor="#333333">
            <Button Grid.Column="0" ImageSource="back.png" Text="Cancel" TextColor="White" BackgroundColor="#444444" Margin="10"/>
            <Editor Grid.Column="2" Keyboard="Url" x:Name="GraphNameEditor" Placeholder="Add your graph's name" BackgroundColor="#444444" TextColor="White" PlaceholderColor="White" Margin="10"/>
            <ImageButton Grid.Column="3" Source="remove.png" Aspect="Fill" BackgroundColor="#444444" Margin="10" CornerRadius="20"/>
            <Button Grid.Column="5" ImageSource="ok.png" Text="Apply" TextColor="White" BackgroundColor="#444444" Margin="10"/>

        </Grid>
        <Button Grid.Row="1" BackgroundColor="Blue"/>
    </Grid>

</ContentPage>